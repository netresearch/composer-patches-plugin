parameters:
    level: 3
    paths:
        - src
    excludePaths:
        - vendor
    treatPhpDocTypesAsCertain: false
    ignoreErrors:
        # Ignore internal Composer class usage - this is required for the plugin
        - '#(InternalClass|InternalMethod).*Composer\\#'
        # The plugin needs to work with different Composer versions
        - '#Parameter .* of class Composer\\Json\\JsonFile constructor expects.*#'
        # Legacy code compatibility
        - '#Method .* has no return type specified#'
        - '#Property .* has no type specified#'
        - '#Parameter .* has no type specified#'
        - '#Method .* should return .* but return statement is missing#'
        - '#has invalid return type#'
        - '#Instantiated class .* not found#'